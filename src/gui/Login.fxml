<AnchorPane prefHeight="667.0" prefWidth="375.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.LoginController">
   <children>
      <ImageView fitHeight="667.0" fitWidth="375.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../Imagens/fundo.jpeg" />
         </image>
      </ImageView>
      <BorderPane prefHeight="667.0" prefWidth="375.0">
         <center>
            <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <children>
                  <TextField fx:id="txtEmail" layoutX="88.0" layoutY="286.0" prefHeight="34.0" prefWidth="200.0" promptText="Email" style="-fx-background-color: #fff; -fx-border-color: #f8106a; -fx-border-width: 0px 0px 1px 0px;" />
                  <PasswordField fx:id="txtSenha" layoutX="88.0" layoutY="364.0" prefHeight="34.0" prefWidth="199.0" promptText="Senha" style="-fx-background-color: #fff; -fx-border-color: #f8106a; -fx-border-width: 0px 0px 1px 0px;" />
                  <Button fx:id="btnLogin" layoutX="131.0" layoutY="470.0" mnemonicParsing="false" onAction="#onbtnLoginAction" prefHeight="41.0" prefWidth="113.0" style="-fx-background-color: #235db2; -fx-border-radius: 50px;" text="Login" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font></Button>
                  <Button fx:id="btnCriarConta" layoutX="142.0" layoutY="519.0" onAction="#onbtnCriarContaAction" prefHeight="33.0" prefWidth="91.0" style="-fx-background-color: transparent;" text="Criar Conta" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font></Button>
                  <ImageView fitHeight="334.0" fitWidth="393.0" layoutX="21.0" layoutY="-48.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../Imagens/logoSF.png" />
                     </image>
                  </ImageView>
                  <ImageView fx:id="imgHome" fitHeight="40.0" fitWidth="30.0" layoutX="14.0" layoutY="14.0" onMouseClicked="#onimgHomeMouseClicked" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../Imagens/seta.png" />
                     </image>
                  </ImageView>
               </children>
            </AnchorPane>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
